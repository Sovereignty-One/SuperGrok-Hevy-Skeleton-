# Application Settings
APP_NAME="CreativeFlow AI"
DEBUG=false

# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:secure_password_here@localhost:5432/creativeflow_db

# Redis Configuration
# Redis connection string for caching and session management
REDIS_URL=redis://localhost:6379/0

# Security Settings
# Generate a secure secret key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# CRITICAL: Change this to a strong random value in production!
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_KEY_AT_LEAST_32_CHARS

# JWT Algorithm (HS256, HS512, RS256, etc.)
ALGORITHM=HS256

# Access token expiration in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Refresh token expiration in days
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Services (Optional)
# OpenAI API key for AI features (leave empty if not using)
OPENAI_API_KEY=

# CORS Origins
# Comma-separated list of allowed origins for CORS
# Example: http://localhost:3000,http://localhost:98765,https://yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:98765

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Request Size Limit (in bytes)
# Default: 10MB
MAX_REQUEST_SIZE=10485760

# Production Settings
# In production, ensure:
# 1. DEBUG is set to false
# 2. SECRET_KEY is a strong random value
# 3. DATABASE_URL uses strong credentials
# 4. REDIS_URL is configured with authentication if exposed
# 5. CORS_ORIGINS only includes trusted domains
# 6. Use HTTPS for all connections
